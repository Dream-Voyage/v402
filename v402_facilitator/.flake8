[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    manage.py,
    settings,
    *.pyc,
    .pytest_cache
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F403,  # unable to detect undefined names
    F405,  # unable to detect undefined names
    F401   # unused imports
max-complexity = 12
statistics = True

